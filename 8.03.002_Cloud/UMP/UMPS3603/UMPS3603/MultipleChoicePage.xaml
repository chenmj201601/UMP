<umpc:UMPUserControl x:Class="UMPS3603.MultipleChoicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:umpc="http://www.voicecyber.com/ump/controls"
                     mc:Ignorable="d">
    <Grid HorizontalAlignment="Left">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="30,5,0,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" HorizontalAlignment="Left">
                <TextBlock Name="TbQuestionName" TextWrapping="Wrap" Text="1"/>
            </Border>
            <Grid Grid.Row="1" Name="AccessoryName1" Visibility="Collapsed">
                <Border Name="BorderPlayBox" MaxHeight="128"/>
            </Grid>
            <Grid Grid.Row="1" Name="AccessoryName2" Visibility="Collapsed" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Name="ImageName" HorizontalAlignment="Center" Margin="5"></Image>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="20"></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Row="0">
                <CheckBox Name="OneName" HorizontalAlignment="Left" Margin="30,5">A.One</CheckBox>
            </Border>
            <Border Grid.Row="1">
                <CheckBox Name="TwoName" HorizontalAlignment="Left" Margin="30,5">B.Two</CheckBox>
            </Border>
            <Border Grid.Row="2">
                <CheckBox Name="ThreeName" HorizontalAlignment="Left" Margin="30,5">C.Three</CheckBox>
            </Border>
            <Border Grid.Row="3">
                <CheckBox Name="FourName" HorizontalAlignment="Left" Margin="30,5">D.Four</CheckBox>
            </Border>
            <Border Grid.Row="4">
                <CheckBox Name="FiveName" HorizontalAlignment="Left" Margin="30,5" Visibility="Collapsed">E.Five</CheckBox>
            </Border>
            <Border Grid.Row="5">
                <CheckBox Name="SixName" HorizontalAlignment="Left" Margin="30,5" Visibility="Collapsed">F.Six</CheckBox>
            </Border>
        </Grid>
    </Grid>
</umpc:UMPUserControl>

