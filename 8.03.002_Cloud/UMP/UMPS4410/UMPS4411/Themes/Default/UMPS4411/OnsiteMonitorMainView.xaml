        <Setter Property="Source" Value="Images/00008.png"></Setter>
    </Style>

    <Style x:Key="SeatViewerImageCallout" TargetType="{x:Type Image}">
        <Setter Property="Stretch" Value="Uniform"></Setter>
        <Setter Property="Width" Value="16"></Setter>
