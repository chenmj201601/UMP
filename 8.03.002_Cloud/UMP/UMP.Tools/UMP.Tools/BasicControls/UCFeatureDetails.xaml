<UserControl x:Class="UMP.Tools.BasicControls.UCFeatureDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid Background="Transparent" Name="MainPanel">
        <Grid.RowDefinitions>
            <RowDefinition Height="26"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Name="DockPanelDetailTitle" Grid.Row="0" Style="{DynamicResource DockPanelDetailTitleStyle}">
            <Image Name="ImageFeatureDetailTip" Style="{DynamicResource ImageFeatureDetailTipStyle}" />
            <Label x:Name="LabelCurrentObjectPath" Style="{DynamicResource LabelCurrentObjectPathStyle}"/>
        </DockPanel>
        <Grid Name="GridTabControlObjectDetail" Grid.Row="1" Style="{DynamicResource GridTabControlFeatureDetailStyle}"/>
    </Grid>
</UserControl>
