<Window x:Class="VCPropertyGridDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:pd="http://www.voicecyber.com/Wpf/PropertyGrids"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel LastChildFill="True">
            <Button Name="BtnDemo" DockPanel.Dock="Left" Width="100" Height="25" Content="Test" Margin="50"></Button>
            <pd:PropertyGrid x:Name="PdDemo" SelectedObject="{Binding ElementName=BtnDemo}"></pd:PropertyGrid>
        </DockPanel>
    </Grid>
</Window>
