<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:VoiceCyber.Wpf.CustomControls">
    
    <!--<Style TargetType="{x:Type local:MetroWaiter}">
        
    </Style>-->

    <Style TargetType="{x:Type local:CustomWaiter}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CustomWaiter}">
                    <Border Name="PART_Panel"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Canvas VerticalAlignment="Center">
                            <Border Name="PART_Point" Width="{TemplateBinding PointSize}" 
                                    Height="{TemplateBinding PointSize}" 
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Center">
                                <Ellipse Fill="{TemplateBinding ViewColor}"
                                         StrokeThickness="0"></Ellipse>
                            </Border>
                            <Border Name="PART_Point1" Width="{TemplateBinding PointSize}" 
                                    Height="{TemplateBinding PointSize}" 
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Center">
                                <Ellipse Fill="{TemplateBinding ViewColor}"
                                         StrokeThickness="0"></Ellipse>
                            </Border>
                            <Border Name="PART_Point2" Width="{TemplateBinding PointSize}" 
                                    Height="{TemplateBinding PointSize}" 
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Center">
                                <Ellipse Fill="{TemplateBinding ViewColor}"
                                         StrokeThickness="0"></Ellipse>
                            </Border>
                            <Border Name="PART_Point3" Width="{TemplateBinding PointSize}" 
                                    Height="{TemplateBinding PointSize}" 
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Center">
                                <Ellipse Fill="{TemplateBinding ViewColor}"
                                         StrokeThickness="0"></Ellipse>
                            </Border>
                            <Border Name="PART_Point4" Width="{TemplateBinding PointSize}" 
                                    Height="{TemplateBinding PointSize}" 
                                    HorizontalAlignment="Left" 
                                    VerticalAlignment="Center">
                                <Ellipse Fill="{TemplateBinding ViewColor}"
                                         StrokeThickness="0"></Ellipse>
                            </Border>
                        </Canvas>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
 
</ResourceDictionary>