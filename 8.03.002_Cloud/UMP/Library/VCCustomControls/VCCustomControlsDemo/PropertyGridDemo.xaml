<Window x:Class="VCCustomControlsDemo.PropertyGridDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:pg="http://www.voicecyber.com/Wpf/Controls"
        Title="PropertyGridDemo" Height="500" Width="800" Loaded="PropertyGridDemo_OnLoaded">
    <DockPanel LastChildFill="True">
        <Grid DockPanel.Dock="Left" Width="250">
            <Button Name="BtnDemo" Content="Demo" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
        </Grid>
        <Grid>
            <pg:PropertyGrid Name="PgDemo" AutoGenerateProperties="True"></pg:PropertyGrid>
        </Grid>
    </DockPanel>
</Window>
