<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	mc:Ignorable="d">

    <ResourceDictionary.MergedDictionaries>
        <!--<ResourceDictionary Source="Colors/Brown.xaml"></ResourceDictionary>-->
        <!--<ResourceDictionary Source="Colors/Green.xaml"></ResourceDictionary>-->
        <!--<ResourceDictionary Source="Colors/Yellow.xaml"></ResourceDictionary>-->
        <!--<ResourceDictionary Source="Colors/Blue.xaml"></ResourceDictionary>-->
    </ResourceDictionary.MergedDictionaries>

    <LinearGradientBrush x:Key="SystemBrush1" 
                         StartPoint="0,0" 
                         EndPoint="0,1">
        <GradientStop Offset="0" Color="{DynamicResource SystemColor1}"></GradientStop>
        <GradientStop Offset="1" Color="{DynamicResource SystemColor3}"></GradientStop>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="SystemBrush2" 
                         StartPoint="0,0" 
                         EndPoint="0,1">
        <GradientStop Offset="0" Color="{DynamicResource SystemColor2}"></GradientStop>
        <GradientStop Offset="1" Color="{DynamicResource SystemColor4}"></GradientStop>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="SystemBrush3" 
                         StartPoint="0,0" 
                       EndPoint="0,1">
        <GradientStop Offset="0" Color="{DynamicResource SystemColor3}"></GradientStop>
        <GradientStop Offset="1" Color="{DynamicResource SystemColor5}"></GradientStop>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="SystemBrush4" 
                         StartPoint="0,0" 
                        EndPoint="0,1">
        <GradientStop Offset="0" Color="{DynamicResource SystemColor4}"></GradientStop>
        <GradientStop Offset="1" Color="{DynamicResource SystemColor6}"></GradientStop>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="SystemBrush5" 
                         StartPoint="0,0" 
                        EndPoint="0,1">
        <GradientStop Offset="0" Color="{DynamicResource SystemColor5}"></GradientStop>
        <GradientStop Offset="1" Color="{DynamicResource SystemColor7}"></GradientStop>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="SystemBrush6" 
                         StartPoint="0,0" 
                         EndPoint="0,1">
        <GradientStop Offset="0" Color="{DynamicResource SystemColor6}"></GradientStop>
        <GradientStop Offset="1" Color="{DynamicResource SystemColor8}"></GradientStop>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="SystemBrush7" 
                         StartPoint="0,0" 
                         EndPoint="0,1">
        <GradientStop Offset="0" Color="{DynamicResource SystemColor7}"></GradientStop>
        <GradientStop Offset="1" Color="{DynamicResource SystemColor9}"></GradientStop>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="SystemBrush8" 
                         StartPoint="0,0" 
                        EndPoint="0,1">
        <GradientStop Offset="0" Color="{DynamicResource SystemColor8}"></GradientStop>
        <GradientStop Offset="1" Color="{DynamicResource SystemColor10}"></GradientStop>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="SystemBrush9" 
                         StartPoint="0,0" 
                        EndPoint="0,1">
        <GradientStop Offset="0" Color="{DynamicResource SystemColor9}"></GradientStop>
        <GradientStop Offset="1" Color="{DynamicResource SystemColor10}"></GradientStop>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="SystemBrush10" 
                         StartPoint="0,0" 
                         EndPoint="0,1">
        <GradientStop Offset="0" Color="{DynamicResource SystemColor10}"></GradientStop>
        <GradientStop Offset="1" Color="{DynamicResource SystemColor8}"></GradientStop>
    </LinearGradientBrush>

    <Style x:Key="FocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border>
                        <Rectangle Margin="15,0,0,0"
                       StrokeThickness="1"
                       Stroke="{StaticResource SystemBrush7}"
                       StrokeDashArray="1 2" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <LinearGradientBrush x:Key="ProgressBarIndicatorAnimateBrush"
                         StartPoint="0,0" EndPoint="1,0">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="{DynamicResource SystemColor5}"
                      Offset="0" />
                <GradientStop Color="{DynamicResource SystemColor7}"
                      Offset="0.4" />
                <GradientStop Color="{DynamicResource SystemColor8}"
                      Offset="0.6" />
                <GradientStop
                    Offset="1" Color="{DynamicResource SystemColor10}">
                </GradientStop>
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <Style TargetType="{x:Type Control}">
        <Setter Property="FontFamily" Value="Microsoft Yahei"></Setter>
        <Setter Property="FontSize" Value="12"></Setter>
    </Style>

</ResourceDictionary>