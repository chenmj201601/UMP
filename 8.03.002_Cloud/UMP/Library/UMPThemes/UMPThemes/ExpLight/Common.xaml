<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	mc:Ignorable="d">

    <ResourceDictionary.MergedDictionaries>
        <!--<ResourceDictionary Source="Colors/Gray.xaml"></ResourceDictionary>-->
        <!--<ResourceDictionary Source="Colors/Green.xaml"></ResourceDictionary>-->
        <!--<ResourceDictionary Source="Colors/Yellow.xaml"></ResourceDictionary>-->
        <!--<ResourceDictionary Source="Colors/Blue.xaml"></ResourceDictionary>-->
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="LightBrush" Color="{DynamicResource LightColor}" />
    <SolidColorBrush x:Key="ShadeBrush" Color="{DynamicResource ShadeColor}" />

    <SolidColorBrush x:Key="TextBrush" Color="{DynamicResource TextColor}" />
    <SolidColorBrush x:Key="NormalBrush" Color="{DynamicResource MainColor}" />
    <SolidColorBrush x:Key="NormalBorderBrush" Color="{DynamicResource NormalBorderColor}" />
    <SolidColorBrush x:Key="HoverBrush" Color="{DynamicResource HoverColor}" />
    <SolidColorBrush x:Key="GlyphBrush" Color="{DynamicResource GlyphColor}" />

    <LinearGradientBrush x:Key="PressedBrush" EndPoint="0.5,0.971" StartPoint="0.5,0.042">
        <GradientStop Color="{DynamicResource PressedColor1}" Offset="0" />
        <GradientStop Color="{DynamicResource PressedColor2}" Offset="1" />
        <GradientStop Color="{DynamicResource PressedColor3}" Offset="0.467" />
        <GradientStop Color="{DynamicResource PressedColor4}" Offset="0.479" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{DynamicResource ControlBackgroundColor}" />

    <LinearGradientBrush x:Key="SelectedBackgroundBrush" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="{DynamicResource TopGradientSelectColor}" Offset="0" />
        <GradientStop Color="{DynamicResource BottomGradientSelectColor}" Offset="1" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="DisabledForegroundBrush" Color="{DynamicResource DisabledForegroundColor}" />
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="{DynamicResource DisabledBackgroundColor}" />
    <SolidColorBrush x:Key="DisabledBorderBrush" Color="{DynamicResource DisabledBorderColor}" />
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{DynamicResource WindowBackgroundColor}" />

    <LinearGradientBrush x:Key="ShineBrush" EndPoint="0.5,0.971" StartPoint="0.5,0.042">
        <GradientStop Color="{DynamicResource ShineColor1}" Offset="0" />
        <GradientStop Color="{DynamicResource ShineColor2}" Offset="1" />
        <GradientStop Color="{DynamicResource ShineColor3}" Offset="0.467" />
        <GradientStop Color="{DynamicResource ShineColor4}" Offset="0.475" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HoverShineBrush" EndPoint="0.5,0.971" StartPoint="0.5,0.042">
        <GradientStop Color="{DynamicResource HoverShineColor1}" Offset="0" />
        <GradientStop Color="{DynamicResource HoverShineColor2}" Offset="1" />
        <GradientStop Color="{DynamicResource HoverShineColor3}" Offset="0.467" />
        <GradientStop Color="{DynamicResource HoverShineColor4}" Offset="0.475" />
        <GradientStop Color="{DynamicResource HoverShineColor5}" Offset="0.856" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PressedBorderBrush" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="{DynamicResource PressedBorderColor1}" Offset="0.0" />
        <GradientStop Color="{DynamicResource PressedBorderColor2}" Offset="1.0" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="DefaultedBorderBrush" Color="{DynamicResource DefaultColor}" />
    <SolidColorBrush x:Key="SolidBorderBrush" Color="{DynamicResource SolidBorderColor}" />

    <Style x:Key="NuclearButtonFocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border>
                        <Rectangle Margin="2" StrokeThickness="1" StrokeDashArray="1 2" >
                            <Rectangle.Stroke>
                                <SolidColorBrush Color="{DynamicResource NuclearButtonForcusColor}"></SolidColorBrush>
                            </Rectangle.Stroke>
                        </Rectangle>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>