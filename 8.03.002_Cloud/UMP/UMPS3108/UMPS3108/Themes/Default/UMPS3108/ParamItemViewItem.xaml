    <ControlTemplate x:Key="ReaptyCall14Template" TargetType="{x:Type local:ParamItemViewItem}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="80"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>
