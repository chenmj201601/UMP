        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Default/UMPS3106/FormStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
