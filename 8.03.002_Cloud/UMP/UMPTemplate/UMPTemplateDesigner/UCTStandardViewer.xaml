<UserControl x:Class="UMPTemplateDesigner.UCTStandardViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Loaded="UCTStandardViewer_OnLoaded">
    <Border Name="BorderPanel">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Name="BorderTitle" Grid.Column="0">
                <Label Name="LbTitle" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3,1" Content="{Binding Title}"></Label>
            </Border>
            <Border Grid.Column="1" HorizontalAlignment="Right">
                <Label Name="LbTip" HorizontalAlignment="Right" Margin="3,1" Content="{Binding Score}"></Label>
            </Border>
            <Border Name="BorderValue" Grid.Column="2" HorizontalAlignment="Right">
                
            </Border>
        </Grid>
    </Border>
</UserControl>
