<UserControl x:Class="VoiceCyber.UMP.ScoreSheets.Controls.Design.CommentItemViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
            Loaded="CommentItemViewer_OnLoaded">
    <Grid>
        <Border Name="BorderPanel" Margin="3,1">
            <TextBlock VerticalAlignment="Center" Text="{Binding Text}" HorizontalAlignment="Stretch"></TextBlock>
        </Border>
    </Grid>
</UserControl>
