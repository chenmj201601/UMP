<UserControl x:Class="UMPS6101.SharingClasses.UserControlDatepick"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    Background="Transparent" Height="28">
    <Grid>
        <WindowsFormsHost Margin="5,0,0,0" Name="DateFormsHostBegin" Height="28" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" Background="Transparent" FontFamily="SimSun" FontSize="12">
            <wf:DateTimePicker Name="DateBegin" Format="Custom" CustomFormat="yyyy-MM-dd"/>
        </WindowsFormsHost>
        <WindowsFormsHost Margin="130,0,0,0" Name="TimeFormsHostBegin" Height="28" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Background="Transparent" FontFamily="SimSun" FontSize="12">
            <wf:DateTimePicker Name="TimeBegin" Format="Custom" CustomFormat="HH:mm:ss" ShowUpDown ="True"/>
        </WindowsFormsHost>
    </Grid>
</UserControl>
