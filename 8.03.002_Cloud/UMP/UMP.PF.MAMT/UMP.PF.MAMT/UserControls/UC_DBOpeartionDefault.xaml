<UserControl x:Class="UMP.PF.MAMT.UserControls.UC_DBOpeartionDefault"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
            <!--选中数据库后 默认加载的操作界面  包含Add和Edit-->
        <StackPanel>
            <Border CornerRadius="20,20,20,20" >
                <DockPanel HorizontalAlignment="Stretch" Margin="0" LastChildFill="True" Style="{DynamicResource TitlePacelStyle}" Height="35">
                    <Image Name="imgOperation" Width="24" Height="24" DockPanel.Dock="Left"></Image>
                    <Label Content="{DynamicResource Operation}" Height="32"  Padding="5" DockPanel.Dock="Left" Style="{DynamicResource TitleStyle}" ></Label>
                </DockPanel>
            </Border>
            <TextBox Background="Black" Height="2" IsReadOnly="True" Margin="0,0,0,10"></TextBox>
            <!--<DockPanel Name="dpAdd" LastChildFill="True"  HorizontalAlignment="Stretch" Margin="20,0,0,10">
                <Image Name="imgAdd" Width="20" Height="20" DockPanel.Dock="Left"></Image>
                <Label Content="{DynamicResource AddLan}" Style="{DynamicResource ControlBaseStyle}"></Label>
            </DockPanel>-->
            <DockPanel Name="dpEdit" LastChildFill="True"  HorizontalAlignment="Stretch" Margin="20,0,0,10">
                <Image Name="imgEdit" Width="20" Height="20" DockPanel.Dock="Left"></Image>
                <Label Content="{DynamicResource EditLan}" Style="{DynamicResource ControlBaseStyle}"></Label>
            </DockPanel>
            <!--<DockPanel Name="dpSearch" LastChildFill="True"  HorizontalAlignment="Stretch" Margin="20,0,0,10">
                <Image Name="imgSearch" Width="20" Height="20" DockPanel.Dock="Left"></Image>
                <Label Content="{DynamicResource SearchLan}" Style="{DynamicResource ControlBaseStyle}"></Label>
            </DockPanel>-->
        </StackPanel>
    </Grid>
</UserControl>
