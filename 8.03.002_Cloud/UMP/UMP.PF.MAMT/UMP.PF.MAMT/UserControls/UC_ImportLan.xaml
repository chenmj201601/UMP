<UserControl x:Class="UMP.PF.MAMT.UserControls.UC_ImportLan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" >
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" >
        <StackPanel HorizontalAlignment="Stretch" Orientation="Vertical" MaxWidth="500">
            <Label Content="{DynamicResource LanguageFile}" Style="{DynamicResource ControlBaseStyle}" Margin="20,30,0,10" Height="23"></Label>
            <DockPanel LastChildFill="True" HorizontalAlignment="Stretch">
                <Button Name="btnBrowse" Content="..." DockPanel.Dock="Right" Margin="15,0,40,0" Width="30"></Button>
                <TextBox IsReadOnly="True" Name="txtLanFile" Height="23" Style="{DynamicResource ControlBaseStyle}" DockPanel.Dock="Left" Margin="40,0,0,0" Background="LightGray"></TextBox>
            </DockPanel>
            <Label Content="{DynamicResource LanguageFilePwd}" Height="23" Style="{DynamicResource ControlBaseStyle}" Margin="20,10,40,10"></Label>
                <PasswordBox IsEnabled="False" Name="txtLanPwd" Height="23" Style="{DynamicResource ControlBaseStyle}" DockPanel.Dock="Left" Margin="40,0,40,0" Background="LightGray"></PasswordBox>
            <Label Content="{DynamicResource LanguageName}" Height="23" Style="{DynamicResource ControlBaseStyle}" Margin="20,10,40,10"></Label>
                <TextBox IsReadOnly="True" Name="txtLanID"  Height="23" Style="{DynamicResource ControlBaseStyle}" DockPanel.Dock="Left" Margin="40,0,40,0" Background="LightGray"></TextBox>
            <Label Content="{DynamicResource ImportOptions}" Height="23" Style="{DynamicResource ControlBaseStyle}" Margin="20,10,40,10"></Label>
            <ComboBox Name="cmbImoprtOptions" Margin="40,0,40,0" Height="23" Style="{DynamicResource ControlBaseStyle}"></ComboBox>
        </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
