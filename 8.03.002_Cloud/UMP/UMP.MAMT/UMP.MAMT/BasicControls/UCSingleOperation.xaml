<UserControl x:Class="UMP.MAMT.BasicControls.UCSingleOperation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="300">
    <Grid Name="GridSingleOperation" Style="{DynamicResource GridSingleOperationStyle}">
        <Image Name="ImageSingleOperation" Style="{DynamicResource ImageSingleOperationStyle}" />
        <TextBlock Name="TextBlockSingleOperation" Style="{DynamicResource TextBlockSingleOperationStyle}"/>
        <Image Name="ImageMoreOperation" Style="{DynamicResource ImageMoreOperationStyle}"/>
    </Grid>
</UserControl>
