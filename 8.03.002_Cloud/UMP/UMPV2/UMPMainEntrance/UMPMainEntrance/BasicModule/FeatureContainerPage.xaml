        <UMPControls:SprocketControl x:Name="SprocketControlLoading"  Grid.Column="1" Grid.Row="3"
            HorizontalAlignment="Center" 
                     VerticalAlignment="Center" 
                     TickColor="White" 
                     Width="64" 
                     Height="64" 
                     TickWidth="5" 
                     TickCount="40" 
                     StartAngle="-90" 
                     IsIndeterminate="True" 
                     Interval="60">
        </UMPControls:SprocketControl>
