<umpc:UMPMainView x:Class="UMPS3601.CreateQuestionsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:umpc="http://www.voicecyber.com/ump/controls"
      xmlns:vcad="http://www.voicecyber.com/wpf/avalondock"
      xmlns:vcc="http://www.voicecyber.com/Wpf/Controls"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/UMPS3601;component/Themes/Default/UMPS3601/MainPageStyle.xaml"></ResourceDictionary>
                <ResourceDictionary Source="/UMPS3601;component/Themes/Default/UMPS3601/AvalonDock.xaml"></ResourceDictionary>
                <ResourceDictionary Source="/UMPS3601;component/Themes/Default/UMPS3601/FormStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.RenderTransform>
        <TransformGroup>
            <TranslateTransform></TranslateTransform>
            <ScaleTransform></ScaleTransform>
            <RotateTransform></RotateTransform>
        </TransformGroup>
    </UserControl.RenderTransform>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" Name="GridLeft"/>
                <ColumnDefinition Width="2"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Border Name="ChoiceQuestionTypeOpt" Grid.Row="0" Style="{DynamicResource BorderBasicOpt}">
                        <Grid>
                            <Expander Name="CQTExpandStyleOpt" Header="Choice Question Type" IsExpanded="True" Style="{DynamicResource ExpandStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Name="CQTBut" Orientation="Vertical"/>
                                </Grid>
                            </Expander>
                        </Grid>
                    </Border>
                    <Border Name="QuestionSettingsOpt" Grid.Row="1" Style="{DynamicResource BorderBasicOpt}">
                        <Grid>
                            <Expander Name="QSExpandStyleOpt" Header="Change Question" IsExpanded="True" Style="{DynamicResource ExpandStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Name="QSBut" Orientation="Vertical"/>
                                </Grid>
                            </Expander>
                        </Grid>
                    </Border>
                    <Border Name="QuestionImportOpt" Grid.Row="2" Style="{DynamicResource BorderBasicOpt}">
                        <Grid>
                            <Expander Name="QIExpandStyleOpt" Header="Import Question" IsExpanded="True" Style="{DynamicResource ExpandStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Name="QIBut" Orientation="Vertical"/>
                                </Grid>
                            </Expander>
                        </Grid>
                    </Border>
                    <Border Name="BasicSettingsOpt" Grid.Row="3" Style="{DynamicResource BorderBasicOpt}">
                        <Grid>
                            <Expander Name="BSExpandStyleOpt" Header="Basic Settings" IsExpanded="True" Style="{DynamicResource ExpandStyle}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Name="BasicSetBut" Orientation="Vertical"/>
                                </Grid>
                            </Expander>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <GridSplitter Grid.Column="1" Style="{DynamicResource GridSpliterLeft}"></GridSplitter>

            <Grid Grid.Column="2">
                <Border Name="BorderMainBg" Style="{DynamicResource BorderMainBg}"></Border>
                <Border Name="BoderMain" Style="{DynamicResource BorderMain}">
                    <DockPanel LastChildFill="True">
                        <Border Name="BorderToolBar" DockPanel.Dock="Top" Style="{DynamicResource ToolBarStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="3" Name="PanelToolButton" Orientation="Horizontal" Margin="0,0,5,0"></StackPanel>
                            </Grid>
                        </Border>
                        <vcad:DockingManager x:Name="PanelManager" Style="{DynamicResource DockManageStyle}">
                            <vcad:LayoutRoot>
                                <vcad:LayoutPanel Orientation="Horizontal">
                                    <vcad:LayoutAnchorablePaneGroup Orientation="Vertical" DockWidth="400">
                                        <vcad:LayoutAnchorablePane >
                                            <vcad:LayoutAnchorable x:Name="PanelObjectTreeBox" Title="Question Category" ContentId="PanelObjectTreeBox" >
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"></RowDefinition>
                                                        <RowDefinition></RowDefinition>
                                                    </Grid.RowDefinitions>
                                                    <Grid Grid.Row="0" >
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Name="TbSearchCategroy" Text="Search Categroy" Margin="5" VerticalAlignment="Center"></TextBlock>
                                                        <TextBox Grid.Column="1" Name="TxtSearchCategroy" Margin="5" VerticalAlignment="Center"></TextBox>
                                                        <StackPanel Grid.Column="2" Name="ButSearchCategroy" Orientation="Vertical" VerticalAlignment="Center"></StackPanel>
                                                    </Grid>
                                                    <Border Grid.Row="1">
                                                        <vcc:CheckableTree Name="CategoryTree" Style="{DynamicResource TreeViewObjects}" ItemContainerStyle="{DynamicResource TreeViewItemObject}" Background="White">
                                                            <vcc:CheckableTree.ItemTemplate>
                                                                <HierarchicalDataTemplate  DataType="{x:Type vcc:CheckableTreeItem}"  ItemsSource="{Binding Children}">
                                                                </HierarchicalDataTemplate>
                                                            </vcc:CheckableTree.ItemTemplate>
                                                        </vcc:CheckableTree>
                                                    </Border>
                                                </Grid>
                                            </vcad:LayoutAnchorable>
                                        </vcad:LayoutAnchorablePane>
                                        <vcad:LayoutAnchorablePane>
                                            <vcad:LayoutAnchorable x:Name="PanelObjectNewListQuestion" Title="New Questions" ContentId="PanelObjectNewListQuestion">
                                                <Border Style="{DynamicResource BorderPanelContent}">
                                                    <DockPanel LastChildFill="True">
                                                        <ListView Name="NewLqDocument" SelectionMode="Extended"  Style="{DynamicResource ListViewRecord}" Background="White">
                                                            <ListView.ItemContainerStyle>
                                                                <Style  TargetType="{x:Type ListViewItem}">
                                                                    <EventSetter Event="MouseLeftButtonUp" Handler="NewLqDocument_MouseLeftButtonUp"></EventSetter>
                                                                    <EventSetter Event="KeyDown" Handler="LqDocument_KeyDown"></EventSetter>
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="ListBoxItem">
                                                                                <Border x:Name="Border"  Padding="3" SnapsToDevicePixels="true" Background="{TemplateBinding Background}">
                                                                                    <GridViewRowPresenter VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                                                                </Border>
                                                                                <ControlTemplate.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter TargetName="Border" Property="Background"  Value="{DynamicResource SystemBrush9}"></Setter>
                                                                                        <Setter Property="Foreground" Value="{DynamicResource SystemBrush1}"></Setter>
                                                                                    </Trigger>
                                                                                    <Trigger Property="IsEnabled" Value="False">
                                                                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource SystemBrush2}"></Setter>
                                                                                        <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource SystemBrush3}"></Setter>
                                                                                        <Setter Property="Foreground" Value="{DynamicResource SystemBrush3}"></Setter>
                                                                                    </Trigger>
                                                                                    <Trigger Property="IsSelected" Value="True">
                                                                                        <Setter TargetName="Border" Property="Background"   Value="{DynamicResource SystemBrush8}"></Setter>
                                                                                        <Setter Property="Foreground" Value="{DynamicResource SystemBrush1}"></Setter>
                                                                                    </Trigger>
                                                                                </ControlTemplate.Triggers>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </ListView.ItemContainerStyle>
                                                        </ListView>
                                                    </DockPanel>
                                                </Border>
                                            </vcad:LayoutAnchorable>
                                            <vcad:LayoutAnchorable x:Name="PanelObjectAllListQuestion" Title="All Questions" ContentId="PanelObjectAllListQuestion">
                                                <Border Style="{DynamicResource BorderPanelContent}">
                                                    <DockPanel LastChildFill="True">
                                                        <Border DockPanel.Dock="Bottom">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Name="TxtPageInfo" Grid.Column="0" Style="{DynamicResource TxtPageInfoStyle}"></TextBlock>
                                                                <StackPanel Name="PanelPageButtons" Grid.Column="2" Orientation="Horizontal"></StackPanel>
                                                                <TextBox Name="TxtPage" Grid.Column="3" Style="{DynamicResource TxtPageStyle}"></TextBox>
                                                            </Grid>
                                                        </Border>
                                                        <ListView Name="AllLqDocument" SelectionMode="Extended"  Style="{DynamicResource ListViewRecord}" Background="White">
                                                            <ListView.ItemContainerStyle>
                                                                <Style  TargetType="{x:Type ListViewItem}">
                                                                    <EventSetter Event="MouseLeftButtonUp" Handler="AllLqDocument_MouseLeftButtonUp"></EventSetter>
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="ListBoxItem">
                                                                                <Border x:Name="Border"  Padding="3" SnapsToDevicePixels="true" Background="{TemplateBinding Background}">
                                                                                    <GridViewRowPresenter VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                                                                </Border>
                                                                                <ControlTemplate.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter TargetName="Border" Property="Background"  Value="{DynamicResource SystemBrush9}"></Setter>
                                                                                        <Setter Property="Foreground" Value="{DynamicResource SystemBrush1}"></Setter>
                                                                                    </Trigger>
                                                                                    <Trigger Property="IsEnabled" Value="False">
                                                                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource SystemBrush2}"></Setter>
                                                                                        <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource SystemBrush3}"></Setter>
                                                                                        <Setter Property="Foreground" Value="{DynamicResource SystemBrush3}"></Setter>
                                                                                    </Trigger>
                                                                                    <Trigger Property="IsSelected" Value="True">
                                                                                        <Setter TargetName="Border" Property="Background"   Value="{DynamicResource SystemBrush8}"></Setter>
                                                                                        <Setter Property="Foreground" Value="{DynamicResource SystemBrush1}"></Setter>
                                                                                    </Trigger>
                                                                                </ControlTemplate.Triggers>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </ListView.ItemContainerStyle>
                                                        </ListView>
                                                    </DockPanel>
                                                </Border>
                                            </vcad:LayoutAnchorable>
                                        </vcad:LayoutAnchorablePane>
                                    </vcad:LayoutAnchorablePaneGroup>
                                    <vcad:LayoutDocumentPane>
                                        <vcad:LayoutAnchorable x:Name="SCPanelLearnDocument" Title="Single Choice"  ContentId="SCPanelLearnDocument" CanFloat="False" CanClose="False">
                                            <ScrollViewer VerticalAlignment="Center" CanContentScroll="True">
                                                <Border HorizontalAlignment="Center">
                                                    <Grid Width="630">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="auto"/>
                                                            <RowDefinition Height="auto"/>
                                                            <RowDefinition Height="*"/>
                                                            <RowDefinition Height="auto"/>
                                                            <RowDefinition Height="auto"/>
                                                            <RowDefinition Height="auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Border Grid.Row="0" Style="{DynamicResource FormItemValue}">
                                                            <Label Name="lbSCQusetionConten" Content="QusetionConten:" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <TextBox Grid.Row="1" Height="180" Name="TxtSCQusetionConten" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="5"/>
                                                        <Grid Grid.Row="2">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="50"></ColumnDefinition>
                                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                            </Grid.ColumnDefinitions>

                                                            <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormItemValue}">
                                                                <Label Name="lbSCOptionA" Content="A."></Label>
                                                            </Border>
                                                            <TextBox Grid.Row="0" Grid.Column="1" Height="40" Name="TxtSCOptionA" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="5"></TextBox>
                                                            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormItemValue}">
                                                                <Label Name="lbSCOptionB" Content="B."></Label>
                                                            </Border>
                                                            <TextBox Grid.Row="1" Grid.Column="1" Height="40" Name="TxtSCOptionB" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="5"></TextBox>
                                                            <Border  Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormItemValue}">
                                                                <Label Name="lbSCOptionC" Content="C."></Label>
                                                            </Border>
                                                            <TextBox Grid.Row="2" Grid.Column="1" Height="40" Name="TxtSCOptionC" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="5"></TextBox>
                                                            <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormItemValue}">
                                                                <Label Name="lbSCOptionD" Content="D."></Label>
                                                            </Border>
                                                            <TextBox Grid.Row="3" Grid.Column="1" Height="40" Name="TxtSCOptionD" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="5"></TextBox>
                                                        </Grid>
                                                        <Border Grid.Row="3">
                                                            <StackPanel>
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition/>
                                                                        <ColumnDefinition/>
                                                                        <ColumnDefinition/>
                                                                        <ColumnDefinition/>
                                                                        <ColumnDefinition/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Border Grid.Column="0" Style="{DynamicResource FormItemValue}">
                                                                        <Label Name="lbSCOptionAnswer" HorizontalAlignment="Left" Content="Answer :"></Label>
                                                                    </Border>
                                                                    <RadioButton Grid.Column="1" GroupName="GroupChoice" Name="rbutA" Margin="5">A</RadioButton>
                                                                    <RadioButton Grid.Column="2" GroupName="GroupChoice" Name="rbutB" Margin="5">B</RadioButton>
                                                                    <RadioButton Grid.Column="3" GroupName="GroupChoice" Name="rbutC" Margin="5">C</RadioButton>
                                                                    <RadioButton Grid.Column="4" GroupName="GroupChoice" Name="rbutD" Margin="5">D</RadioButton>
                                                                </Grid>
                                                            </StackPanel>
                                                        </Border>
                                                        <Border Grid.Row="4" Visibility="Collapsed">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="auto"/>
                                                                    <ColumnDefinition Width="auto"/>
                                                                    <ColumnDefinition Width="auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Border Grid.Column="0" Style="{DynamicResource FormItemValue}">
                                                                    <Label Name="lbSCAttachments" HorizontalAlignment="Left" Content="Attachments"></Label>
                                                                </Border>
                                                                <TextBox Grid.Column="1" Name="TxtSCAttachments" HorizontalAlignment="Left" Width="300" Margin="5"></TextBox>
                                                                <Border Grid.Column="2" Style="{DynamicResource FormItemValue}">
                                                                    <Button Name="butSCBrowse" Content="Browse" Click="butBrowse_Click" HorizontalAlignment="Left"></Button>
                                                                </Border>
                                                            </Grid>
                                                        </Border>
                                                        <Border Grid.Row="5">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                                                </Grid.ColumnDefinitions>
                                                                
                                                                <Grid Grid.Column="2">
                                                                    <Button Name="butSCSave" Content="Save" Click="butSCSave_Click" HorizontalAlignment="Right" Margin="5"></Button>
                                                                </Grid>
                                                            </Grid>
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                            </ScrollViewer>
                                        </vcad:LayoutAnchorable>
                                        <vcad:LayoutAnchorable x:Name="MCPanelLearnDocument" Title="Multiple Choice" ContentId="MCPanelLearnDocument" CanFloat="False" CanClose="False">
                                            <ScrollViewer VerticalAlignment="Center" CanContentScroll="True">
                                                <Border HorizontalAlignment="Center">
                                                    <Grid Width="630">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="auto"/>
                                                            <RowDefinition Height="auto"/>
                                                            <RowDefinition Height="*"/>
                                                            <RowDefinition Height="auto"/>
                                                            <RowDefinition Height="auto"/>
                                                            <RowDefinition Height="auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Border Grid.Row="0" Style="{DynamicResource FormItemValue}">
                                                            <Label Name="lbMCQusetionConten" Content="QusetionConten:" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <TextBox Grid.Row="1" Height="180" Name="TxtMCQusetionConten" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="5"/>
                                                        <Grid Grid.Row="2">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="50"></ColumnDefinition>
                                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                            </Grid.ColumnDefinitions>
                                                            <Border Grid.Row="0" Grid.Column="0" Style="{DynamicResource FormItemValue}">
                                                                <Label Name="lbMCOptionA" Content="A."></Label>
                                                            </Border>
                                                            <TextBox Grid.Row="0" Grid.Column="1" Height="40" Name="TxtMCOptionA" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="5"></TextBox>
                                                            <Border Grid.Row="1" Grid.Column="0" Style="{DynamicResource FormItemValue}">
                                                                <Label Name="lbMCOptionB" Content="B."></Label>
                                                            </Border>
                                                            <TextBox Grid.Row="1" Grid.Column="1" Height="40" Name="TxtMCOptionB" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="5"></TextBox>
                                                            <Border Grid.Row="2" Grid.Column="0" Style="{DynamicResource FormItemValue}">
                                                                <Label Name="lbMCOptionC" Content="C."></Label>
                                                            </Border>
                                                            <TextBox Grid.Row="2" Grid.Column="1" Height="40" Name="TxtMCOptionC" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="5"></TextBox>
                                                            <Border Grid.Row="3" Grid.Column="0" Style="{DynamicResource FormItemValue}">
                                                                <Label Name="lbMCOptionD" Content="D."></Label>
                                                            </Border>
                                                            <TextBox Grid.Row="3" Grid.Column="1" Height="40" Name="TxtMCOptionD" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="5"></TextBox>
                                                            <Border Grid.Row="4" Grid.Column="0" Style="{DynamicResource FormItemValue}">
                                                                <Label Name="lbMCOptionE" Content="E."></Label>
                                                            </Border>
                                                            <TextBox Grid.Row="4" Grid.Column="1" Height="40" Name="TxtMCOptionE" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="5"></TextBox>
                                                            <Border Grid.Row="5" Grid.Column="0" Width="50" Style="{DynamicResource FormItemValue}">
                                                                <Label Name="lbMCOptionF" Content="F."></Label>
                                                            </Border>
                                                            <TextBox Grid.Row="5" Grid.Column="1" Height="40" Name="TxtMCOptionF" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="5"></TextBox>
                                                        </Grid>                    
                                                        <Border Grid.Row="3">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition/>
                                                                    <ColumnDefinition/>
                                                                    <ColumnDefinition/>
                                                                    <ColumnDefinition/>
                                                                    <ColumnDefinition/>
                                                                    <ColumnDefinition/>
                                                                    <ColumnDefinition/>
                                                                </Grid.ColumnDefinitions>
                                                                <Border Grid.Column="0" Style="{DynamicResource FormItemValue}">
                                                                    <Label Name="lbMCOptionAnswer" HorizontalAlignment="Left" Content="Answer :"></Label>
                                                                </Border>
                                                                <CheckBox Grid.Column="1" Name="checkBoxA" HorizontalAlignment="Left" Margin="5">A</CheckBox>
                                                                <CheckBox Grid.Column="2" Name="checkBoxB" HorizontalAlignment="Left" Margin="5">B</CheckBox>
                                                                <CheckBox Grid.Column="3" Name="checkBoxC" HorizontalAlignment="Left" Margin="5">C</CheckBox>
                                                                <CheckBox Grid.Column="4" Name="checkBoxD" HorizontalAlignment="Left" Margin="5">D</CheckBox>
                                                                <CheckBox Grid.Column="5" Name="checkBoxE" HorizontalAlignment="Left" Margin="5">E</CheckBox>
                                                                <CheckBox Grid.Column="6" Name="checkBoxF" HorizontalAlignment="Left" Margin="5">F</CheckBox>
                                                            </Grid>
                                                        </Border>
                                                        <Border  Grid.Row="4" Visibility="Collapsed">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="auto"/>
                                                                    <ColumnDefinition Width="auto"/>
                                                                    <ColumnDefinition Width="auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Border Grid.Column="0" Style="{DynamicResource FormItemValue}">
                                                                    <Label Name="lbMCAttachments" HorizontalAlignment="Left" Content="Attachments"></Label>
                                                                </Border>
                                                                <TextBox Grid.Column="1" Name="TxtMCAttachments" HorizontalAlignment="Left" VerticalAlignment="Center" Width="300" Margin="5"></TextBox>
                                                                <Border Grid.Column="2" Style="{DynamicResource FormItemValue}">
                                                                    <Button Name="butMCBrowse" Content="Browse" Click="butBrowse_Click" HorizontalAlignment="Left"></Button>
                                                                </Border>
                                                            </Grid>
                                                        </Border>
                                                        <Border Grid.Row="5">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                                                </Grid.ColumnDefinitions>
                                                                <Grid Grid.Column="2">
                                                                    <Button Name="butMCSave" Content="Save" Click="butMCSave_Click" HorizontalAlignment="Right" Margin="5"></Button>
                                                                </Grid>
                                                            </Grid>
                                                        </Border>
                                                    </Grid>
                                                </Border>
                                            </ScrollViewer>
                                        </vcad:LayoutAnchorable>
                                        <vcad:LayoutAnchorable x:Name="TOFPanelLearnDocument" Title="TrueOrFalse" ContentId="TOFPanelLearnDocument" CanFloat="False" CanClose="False">
                                            <ScrollViewer VerticalAlignment="Center" CanContentScroll="False">
                                                <Border HorizontalAlignment="Center">
                                                    <Grid Width="630">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="auto"/>
                                                            <RowDefinition Height="auto"/>
                                                            <RowDefinition Height="auto"/>
                                                            <RowDefinition Height="auto"/>
                                                            <RowDefinition Height="auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Border Grid.Row="0" Style="{DynamicResource FormItemValue}">
                                                            <Label Name="lbTOFQusetionConten" Content="QusetionConten:" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <TextBox Grid.Row="1" Height="180" Name="TxtTOFQusetionConten" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Margin="5"/>
                                                        <Border Grid.Row="2">
                                                            <StackPanel>
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="auto"/>
                                                                        <ColumnDefinition Width="auto"/>
                                                                        <ColumnDefinition Width="auto"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Border Grid.Column="0">
                                                                        <Label Name="lbTOFOptionAnswer" HorizontalAlignment="Left" Content="Answer" Margin="5"></Label>
                                                                    </Border>
                                                                    <Border Grid.Column="1" Style="{DynamicResource FormItemValue}">
                                                                        <RadioButton GroupName="GroupTOF" Name="rbutTOFTrue" HorizontalAlignment="Left" Margin="5">True</RadioButton>
                                                                    </Border>
                                                                    <Border Grid.Column="2" Style="{DynamicResource FormItemValue}">
                                                                        <RadioButton GroupName="GroupTOF" Name="rbutTOFFalse" HorizontalAlignment="Left" Margin="5">False</RadioButton>
                                                                    </Border>
                                                                </Grid>
                                                            </StackPanel>
                                                        </Border>
                                                        <Border Grid.Row="3" Grid.ColumnSpan="2" Visibility="Collapsed">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="auto"/>
                                                                    <ColumnDefinition Width="auto"/>
                                                                    <ColumnDefinition Width="auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Border Grid.Column="0" Style="{DynamicResource FormItemValue}">
                                                                    <Label Name="lbTOFAttachments" HorizontalAlignment="Left" Content="Attachments"></Label>
                                                                </Border>
