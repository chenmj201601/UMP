                                                        </Border>
                                                        <Border Grid.ColumnSpan="2" Grid.Row="2" Style="{DynamicResource FormItemValue}">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="50"/>
                                                                    <ColumnDefinition Width="auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Border Grid.Column="0" Width="50" Style="{DynamicResource FormItemValue}">
                                                                    <Label Name="lbMCOptionA" Content="A." Margin="10,10,0,0"></Label>
                                                                </Border>
                                                                <Border Grid.Column="1" Style="{DynamicResource FormItemValue}" Width="580">
                                                                    <TextBox Name="TxtMCOptionA" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Right" Width="570" Margin="10,10,0,0"></TextBox>
                                                                </Border>
                                                            </Grid>
                                                        </Border>
                                                        <Border Grid.ColumnSpan="2" Grid.Row="3" Style="{DynamicResource FormItemValue}">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="50"/>
                                                                    <ColumnDefinition Width="auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Border Grid.Column="0" Width="50" Style="{DynamicResource FormItemValue}">
                                                                    <Label Name="lbMCOptionB" Content="B." Margin="10,10,0,0"></Label>
                                                                </Border>
                                                                <Border Grid.Column="1" Style="{DynamicResource FormItemValue}" Width="580">
                                                                    <TextBox Name="TxtMCOptionB" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Right" Width="570" Margin="10,10,0,0"></TextBox>
                                                                </Border>
                                                            </Grid>
                                                        </Border>
                                                        <Border Grid.ColumnSpan="2" Grid.Row="4" Style="{DynamicResource FormItemValue}">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="50"/>
                                                                    <ColumnDefinition Width="auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Border Grid.Column="0" Width="50" Style="{DynamicResource FormItemValue}">
                                                                    <Label Name="lbMCOptionC" Content="C." Margin="10,10,0,0"></Label>
                                                                </Border>
                                                                <Border Grid.Column="1" Style="{DynamicResource FormItemValue}" Width="580">
                                                                    <TextBox Name="TxtMCOptionC" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Right" Width="570" Margin="10,10,0,0"></TextBox>
                                                                </Border>
