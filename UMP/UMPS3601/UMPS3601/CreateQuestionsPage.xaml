                                                                    </Grid.ColumnDefinitions>
                                                                    <Border Grid.Column="0" Width="50" Style="{DynamicResource FormItemValue}">
                                                                        <Label Name="lbSCOptionC" Content="C." Margin="10,10,0,0"></Label>
                                                                    </Border>
                                                                    <Border Grid.Column="1" Style="{DynamicResource FormItemValue}" Width="580">
                                                                        <TextBox Name="TxtSCOptionC" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Right" Width="570" Margin="10,10,0,0"></TextBox>
                                                                    </Border>
                                                                </Grid>
                                                            </Border>
                                                            <Border Grid.Row="5" Style="{DynamicResource FormItemValue}">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="50"/>
                                                                        <ColumnDefinition Width="auto"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Border Grid.Column="0" Width="50" Style="{DynamicResource FormItemValue}">
                                                                        <Label Name="lbSCOptionD" Content="D." Margin="10,10,0,0"></Label>
                                                                    </Border>
                                                                    <Border Grid.Column="1" Style="{DynamicResource FormItemValue}" Width="580">
                                                                        <TextBox Name="TxtSCOptionD" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Right" Width="570" Margin="10,10,0,0"></TextBox>
                                                                    </Border>
                                                                </Grid>
                                                            </Border>
                                                            <Border Grid.Row="6" Style="{DynamicResource FormItemValue}">
                                                                <StackPanel>
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="auto"/>
                                                                            <ColumnDefinition Width="auto"/>
                                                                            <ColumnDefinition Width="auto"/>
                                                                            <ColumnDefinition Width="auto"/>
                                                                            <ColumnDefinition Width="auto"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <Border Grid.Column="0" Style="{DynamicResource FormItemValue}">
                                                                            <Label Name="lbSCOptionAnswer" HorizontalAlignment="Left" Content="Answer :" Margin="10,10,0,0"></Label>
                                                                        </Border>
                                                                        <Border Grid.Column="1" Style="{DynamicResource FormItemValue}">
                                                                            <RadioButton GroupName="GroupChoice" Name="rbutA" HorizontalAlignment="Left" Margin="10,10,0,-10">A</RadioButton>
                                                                        </Border>
                                                                        <Border Grid.Column="2" Style="{DynamicResource FormItemValue}">
                                                                            <RadioButton GroupName="GroupChoice" Name="rbutB" HorizontalAlignment="Left" Margin="10,10,0,-10">B</RadioButton>
                                                                        </Border>
                                                                        <Border Grid.Column="3" Style="{DynamicResource FormItemValue}">
                                                                            <RadioButton GroupName="GroupChoice" Name="rbutC" HorizontalAlignment="Left" Margin="10,10,0,-10">C</RadioButton>
                                                                        </Border>
                                                                        <Border Grid.Column="4" Style="{DynamicResource FormItemValue}">
                                                                            <RadioButton GroupName="GroupChoice" Name="rbutD" HorizontalAlignment="Left" Margin="10,10,0,-10">D</RadioButton>
                                                                        </Border>
                                                                    </Grid>
                                                                </StackPanel>
                                                            </Border>
                                                            <Border Grid.Row="7" Style="{DynamicResource FormItemValue}">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="auto"/>
                                                                        <ColumnDefinition Width="auto"/>
                                                                        <ColumnDefinition Width="auto"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Border Grid.Column="0" Style="{DynamicResource FormItemValue}">
                                                                        <Label Name="lbSCAttachments" HorizontalAlignment="Left" Content="Attachments" Margin="10,10,0,0"></Label>
                                                                    </Border>
                                                                    <Border Grid.Column="1" Style="{DynamicResource FormItemValue}">
                                                                        <TextBox Name="TxtSCAttachments" IsReadOnly="True"  HorizontalAlignment="Left" VerticalAlignment="Center" Width="300" Margin="10,10,0,0"></TextBox>
                                                                    </Border>
                                                                    <Border Grid.Column="2" Style="{DynamicResource FormItemValue}">
                                                                        <Button Name="butSCBrowse" Content="Browse" Click="butBrowse_Click" HorizontalAlignment="Left" Margin="10,10,0,0"></Button>
                                                                    </Border>
                                                                </Grid>
                                                            </Border>
                                                            <Border Grid.Row="8" Style="{DynamicResource FormItemValue}">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Grid Grid.Column="1">
                                                                        <Button Name="butSCClear" Content="Clear" Click="butSCClear_Click" HorizontalAlignment="Right" Margin="10,10,0,0"></Button>
                                                                    </Grid>
                                                                    <Grid Grid.Column="2">
                                                                        <Button Name="butSCSave" Content="Save" Click="butSCSave_Click" HorizontalAlignment="Right" Margin="10,10,0,0"></Button>
                                                                    </Grid>
                                                                </Grid>
                                                            </Border>
                                                        </Grid>
                                                    </Border>
                                            </ScrollViewer>
                                        </vcad:LayoutAnchorable>
