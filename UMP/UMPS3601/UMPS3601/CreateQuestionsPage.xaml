                                                                <RowDefinition Height="auto"/>
                                                                <RowDefinition Height="auto"/>
                                                                <RowDefinition Height="auto"/>
                                                                <RowDefinition Height="auto"/>
                                                                <RowDefinition Height="auto"/>
                                                            </Grid.RowDefinitions>
                                                            <Border Grid.Row="0" Style="{DynamicResource FormItemValue}">
                                                                <Label Name="lbSCQusetionConten" Content="QusetionConten:" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <Border Grid.Row="1" Width="630" Height="180" Style="{DynamicResource FormItemValue}">
                                                                <TextBox Name="TxtSCQusetionConten" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
                                                            </Border>
                                                            <Border Grid.Row="2" Style="{DynamicResource FormItemValue}">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="50"/>
                                                                        <ColumnDefinition Width="auto"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Border Grid.Column="0" Width="50" Style="{DynamicResource FormItemValue}">
                                                                        <Label Name="lbSCOptionA" Content="A." Margin="10,10,0,0"></Label>
                                                                    </Border>
                                                                    <Border Grid.Column="1" Style="{DynamicResource FormItemValue}" Width="580">
                                                                        <TextBox Name="TxtSCOptionA" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Right" Width="570" Margin="10,10,0,0"></TextBox>
                                                                    </Border>
                                                                </Grid>
                                                            </Border>
                                                            <Border Grid.Row="3" Style="{DynamicResource FormItemValue}">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="50"/>
                                                                        <ColumnDefinition Width="auto"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Border Grid.Column="0" Width="50" Style="{DynamicResource FormItemValue}">
                                                                        <Label Name="lbSCOptionB" Content="B." Margin="10,10,0,0"></Label>
                                                                    </Border>
                                                                    <Border Grid.Column="1" Style="{DynamicResource FormItemValue}" Width="580">
                                                                        <TextBox Name="TxtSCOptionB" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Right" Width="570" Margin="10,10,0,0"></TextBox>
