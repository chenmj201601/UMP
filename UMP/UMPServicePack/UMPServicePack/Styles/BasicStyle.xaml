<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="Microsoft YaHei"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
        <Setter Property="TextOptions.TextHintingMode" Value="Fixed"/>
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        <Setter Property="Height" Value="26"></Setter>
    </Style>
    
    <Style TargetType="PasswordBox">
        <Setter Property="FontFamily" Value="Microsoft YaHei"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="PasswordChar" Value="*"></Setter>
        <Setter Property="Height" Value="26"></Setter>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource NormalFontStyle}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Height" Value="26"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource NormalFontStyle}">
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="AutoWordSelection" Value="True"/>
        <Setter Property="Height" Value="26"></Setter>
        <Setter Property="FontFamily" Value="Microsoft YaHei"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

</ResourceDictionary>