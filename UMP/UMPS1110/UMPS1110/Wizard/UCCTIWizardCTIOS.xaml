<umpc:UMPUserControl x:Class="UMPS1110.Wizard.UCCTIWizardCTIOS"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:umpc="http://www.voicecyber.com/ump/controls"
             xmlns:vcc="http://www.voicecyber.com/Wpf/Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="400" Height="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition Width="40*"></ColumnDefinition>
            <ColumnDefinition Width="50*"></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Height="20"></Grid>
        <Label x:Name="LabCTIIPA" Margin="5" Grid.Column="1" Grid.Row="1" Height="30">CTI IP A:</Label>
        <vcc:IPv4AddressTextBox Name="IPTextBoxA" Grid.Column="2" Grid.Row="1" Margin="5" Background="White"
                                BorderThickness="0"></vcc:IPv4AddressTextBox>
        
        <Label x:Name="LabPortA" Margin="5" Grid.Column="1" Grid.Row="2" Height="30">CTI Port A:</Label>
        <TextBox x:Name="TexPortA" Margin="5" Grid.Column="2" Grid.Row="2" Width="190"></TextBox>
        
        <Label x:Name="LabCTIB" Margin="5" Grid.Column="1" Grid.Row="3" Height="30">CTI IP B:</Label>
        <vcc:IPv4AddressTextBox Name="IPTexBoxB" Grid.Column="2" Grid.Row="3"></vcc:IPv4AddressTextBox>
        
        <Label x:Name="LabPortB" Margin="5" Grid.Column="1" Grid.Row="4" Height="30">CTI Port B:</Label>
        <TextBox x:Name="TexPortB" Margin="5" Grid.Column="2" Grid.Row="4" Width="190"></TextBox>
        <Grid Grid.Row="5" Height="20"></Grid>
            <Grid Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"></ColumnDefinition>
                <ColumnDefinition Width="15*"></ColumnDefinition>
                <ColumnDefinition Width="15*"></ColumnDefinition>
                <ColumnDefinition Width="15*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="ButBack" Margin="5" Height="30" Width="80" Grid.Column="1">Back</Button>
            <Button x:Name="ButnPrevious" Margin="5" Height="30" Width="80" Grid.Column="2">Previous</Button>
            <Button x:Name="ButNext" Margin="5" Height="30" Width="80" Grid.Column="3">Next</Button>
        </Grid>
    </Grid>
</umpc:UMPUserControl>
