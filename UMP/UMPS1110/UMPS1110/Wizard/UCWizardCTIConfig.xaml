<umpc:UMPUserControl x:Class="UMPS1110.Wizard.UCWizardCTIConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:umpc="http://www.voicecyber.com/ump/controls"
             xmlns:vcc="http://www.voicecyber.com/Wpf/Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="400" Height="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition Width="90*"></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Height="50"></Grid>
        <Grid Grid.Row="1" Grid.Column="1">
            <Label x:Name="LabIsConfig" Margin="5" Height="30" HorizontalContentAlignment="Center"></Label>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40*"></ColumnDefinition>
                <ColumnDefinition Width="50*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label x:Name="LabCTIType" Height="30" Margin="5" Grid.Column="0">CTI Type:</Label>
            <ComboBox x:Name="ComCTIType" Height="30" Margin="5" Grid.Column="1" Width="190"></ComboBox>
        </Grid>
        
        <Grid Grid.Row="3" Height="50"></Grid>
        
        <Grid Grid.Row="4" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"></ColumnDefinition>
                <ColumnDefinition Width="15*"></ColumnDefinition>
                <ColumnDefinition Width="15*"></ColumnDefinition>
                <ColumnDefinition Width="15*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="ButnBack" Grid.Column="1" Height="30" Width="80" Margin="5">返回</Button>
            <Button x:Name="ButnPrevious" Grid.Column="2" Height="30" Width="80" Margin="5">上一步</Button>
            <Button x:Name="ButnNext" Grid.Column="3" Height="30" Width="80" Margin="5">下一步</Button>
        </Grid>
    </Grid>
</umpc:UMPUserControl>
