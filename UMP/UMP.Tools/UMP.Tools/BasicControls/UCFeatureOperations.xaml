<UserControl x:Class="UMP.Tools.BasicControls.UCFeatureOperations"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="Transparent" Name="MainPanel">
        <Grid.RowDefinitions>
            <RowDefinition Height="26"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Name="DockPanelOperationsTitle" Grid.Row="0" Style="{DynamicResource DockPanelOperationsTitleStyle}">
            <Image Name="ImageOperations" Style="{DynamicResource ImageOperationsStyle}"/>
            <Label Name="LabelOperationsTitle" Style="{DynamicResource LabelOperationsTitleStyle}" />
            <Image Name="ImageCloseOperations" Style="{DynamicResource ImageCloseOperationsStyle}"/>
        </DockPanel>
        <ScrollViewer Name="ScrollViewerObjectOperations" Style="{DynamicResource ScrollViewerObjectOperationsStyle}" Grid.Row="1">
            <StackPanel Name="StackPanelObjectOperations"/>
        </ScrollViewer>
    </Grid>
</UserControl>
