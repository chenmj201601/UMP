<Window x:Class="PFShareControlsDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Young="clr-namespace:PFShareControls;assembly=PFShareControls"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="GridMain">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <Grid x:Name="GridTreeView"/>
        <Button Grid.Row="1" Width="100" Height="26" HorizontalAlignment="Left" Content="已选择" Margin="2,0,0,0" Click="Button_Click"/>
        <Button Grid.Row="1" Width="100" Height="26" HorizontalAlignment="Left" Content="未选择" Margin="110,0,0,0" Click="Button_Click_1"/>
    </Grid>
</Window>
