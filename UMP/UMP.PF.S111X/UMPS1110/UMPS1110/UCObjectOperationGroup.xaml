<UserControl x:Class="UMPS1110.UCObjectOperationGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="52" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Name="GridObjectOperationGroupName" Grid.Row="0" Style="{DynamicResource YGridObjectOperationGroupNameStyle}">
            <TextBlock Name="TextBlockOperationGroupName" Style="{DynamicResource YTextBlockOperationGroupNameStyle}"/>
            <Image Name="ImageUpDownArrow" Margin="0,1,2,1" Width="24" Height="24" HorizontalAlignment="Right"/>
        </Grid>
        <Grid Grid.Row="1" Margin="0">
            <StackPanel Name="StackPanelObjectOperationsList"/>
        </Grid>
    </Grid>
</UserControl>
