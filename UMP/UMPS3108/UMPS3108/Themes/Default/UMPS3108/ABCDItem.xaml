                <MultiTrigger.Setters>
                    <Setter Property="Template" 
                            Value="{StaticResource Text12Template}"></Setter>
                </MultiTrigger.Setters>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="ItemType" Value="DropDownEnum"></Condition>
