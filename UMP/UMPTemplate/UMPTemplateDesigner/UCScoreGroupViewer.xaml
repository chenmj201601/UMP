<UserControl x:Class="UMPTemplateDesigner.UCScoreGroupViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Loaded="UCScoreGroupViewer_OnLoaded" BorderBrush="LightGray">
    <Border Name="BorderPanel">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Border Name="BorderTitle" Grid.Row="0">
                <Label Name="LbTitle" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="3,1" Content="{Binding Title}"></Label>
            </Border>
            <Border Grid.Row="1" VerticalAlignment="Bottom" BorderThickness="0,1,0,0" BorderBrush="LightGray">
                <Grid Name="GridItems">

                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
