<UserControl x:Class="UMPTemplateDesigner.UCStandardItemViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Loaded="UCStandardItemViewer_OnLoaded">
    <Grid>
        <Border Margin="3,1">
            <TextBlock VerticalAlignment="Center" Text="{Binding Display}" HorizontalAlignment="Stretch"></TextBlock>
        </Border>
    </Grid>
</UserControl>
