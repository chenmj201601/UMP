<Window x:Class="UMPS000ADemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel LastChildFill="True">
            <Menu DockPanel.Dock="Top">
                <MenuItem Name="BtnTest" Header="Test"></MenuItem>
                <MenuItem Name="BtnGetLang" Header="GetLang"></MenuItem>
                <MenuItem Name="BtnGetOpt" Header="GetOpt"></MenuItem>
                <MenuItem Name="BtnGetResource" Header="GetResource"></MenuItem>
                <MenuItem Name="BtnQueryRecord" Header="QueryRecord"></MenuItem>
                <MenuItem Name="BtnGetRecordUrl" Header="GetRecordUrl"></MenuItem>
                <MenuItem Name="BtnUpdateRecordInfo" Header="UpdateRecord"></MenuItem>
                <MenuItem Name="BtnInsertRecord" Header="InsertRecord"></MenuItem>
            </Menu>
            <Grid>
                <TextBox Name="TxtMsg" HorizontalScrollBarVisibility="Disabled"
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"></TextBox>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
