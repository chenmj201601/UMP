                    <TabItem Header="{Binding TxtTimeType1,RelativeSource={RelativeSource TemplatedParent}}" Style="{StaticResource ConditionItemTabItemStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <vcc:IntegerUpDown Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="120" Value="{Binding TxtTimeFromToCount,RelativeSource={RelativeSource TemplatedParent}}"></vcc:IntegerUpDown>
