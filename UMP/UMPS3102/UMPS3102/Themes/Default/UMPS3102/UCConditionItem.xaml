                                      ItemContainerStyle="{StaticResource ConditionItemComboItemStyle}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate DataType="{x:Type ComboBoxItem}">
                                        <TextBlock Text="{Binding Display}"></TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
    </ControlTemplate>

