<umpc:UMPUserControl x:Class="UMPS3102.RecordScoreDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:umpc="http://www.voicecyber.com/ump/controls"
             xmlns:conv="clr-namespace:UMPS3102.Converters"
             xmlns:vcc="http://www.voicecyber.com/Wpf/Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Style="{DynamicResource RecordScoreDetail}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Default/UMPS3102/RecordScoreDetail.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Border  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Style="{DynamicResource FormBorderItem}" Margin="10,10,10,10">
            <ListView Name="LvRecordScoreDetail" Style="{DynamicResource ListViewRecords}"
                                  ItemContainerStyle="{DynamicResource ListViewRecordScoreDetail}" ></ListView>
        </Border>
    </Grid>
</umpc:UMPUserControl>
