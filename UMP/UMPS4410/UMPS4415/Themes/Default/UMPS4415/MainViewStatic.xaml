<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <DataTemplate x:Key="CellColorTemplate">
        <Grid>
            <Border Background="{Binding BrushColor}" Padding="2">
                <TextBlock Text="{Binding Color}" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            </Border>
        </Grid>
    </DataTemplate>
    
</ResourceDictionary>